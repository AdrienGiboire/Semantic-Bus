{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "client/typescript/src",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "static/js",
    "paths": {},
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "target": "esnext"
  },
  "include": [
    "client/typescript/src/**/*",
    "client/typescript/typings/**/*"
  ]
}